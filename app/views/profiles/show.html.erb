<div class= 'row'>
  <div class= 'col'> </div>
  <div class= 'col-md-10'>  
  <% if notice%>
      <div class= "alert alert-info">
        <p id="notice"><%= notice %></p>
      </div>
    <%end%>

<div class="text-center align p-2 m-3">
    
    <div class= 'mt-1 align'>
    <p>
      <img
          src= <%=@profile.profile_image_url%>,
          class="rounded ",
          hight = '10%',
          width = '10%',

        %>
    </p>
    </div>


    <p>
      <strong>Name:</strong>
      <%= @profile.username %>
    </p>

    <p>
      <strong>Github url:</strong>
      <a href= <%= @profile.github_url %> > <%= @profile.github_url %> </a>
    </p>

    <p>
      <strong>Short url:</strong>
      <a href= <%= @profile.short_url %> > <%= @profile.short_url %> </a>
    </p>

    <p>
      <strong>Github username:</strong>
      <%= @profile.github_username %>
    </p>

    <p>
      <strong>Followers:</strong>
      <%= @profile.followers %>
    </p>

    <p>
      <strong>Following:</strong>
      <%= @profile.following %>
    </p>

    <p>
      <strong>Stars:</strong>
      <%= @profile.stars %>
    </p>

    <p>
      <strong>Contributions:</strong>
      <%= @profile.contributions %>
    </p>

    <% if @profile.organization %>
      <p>
        <strong>Organization:</strong>
        <%= @profile.organization %>
      </p>
    <% end %>
 
    <% if @profile.location %>
      <p>
        <strong>Location:</strong>
        <%= @profile.location %>
      </p>
    <% end %>
    
    <% if @profile.email %>
      <p>
        <strong>Email:</strong>
        <%= @profile.email %>
      </p>
    <% end %>


<div class="btn-group m-2">
    <%= button_to 'Extract github info', action="/profiles/#{@profile.id}/update_informations", class: 'btn btn-md btn-success' %>
    <%= button_to 'Edit', edit_profile_path(@profile),  method: :get, class: 'btn btn-md btn-warning' %>
    <%= button_to 'Destroy', @profile, method: :delete, class: 'btn btn-md btn-danger',
     data: { confirm: 'Are you sure?',  } %>
    <%= button_to 'Back', profiles_path , method: :get, class: 'btn btn-md btn-info'  %>

</div>

</div>

</div>
  <div class= 'col'> </div>
</div>
